extends layout

block content
  title Twapp
  .container
    h1 Twapp
  div(class="login-register-div")
    h2 Login     
    div(class="index-form-div")
      form(action='/login' method='post')
        input#username(type='text' name='username' placeholder='Enter your username')
        input#password(type='password' name='password' placeholder='Enter your password')
        button(type='submit' class="login-register-div-buttons" name='formLoginType' value='login') Submit
  div(class="login-register-div")
    h2 Register
    div(class="index-form-div")
      form(action='/register' method='post')
        input#username(type='text' name='username' placeholder='Enter your username')
        input#password(type='password' name='password' placeholder='Enter your password')
        button(type='submit' class="login-register-div-buttons" name='formRegisterType' value='register') Submit
    p(class="error-message-register")= message
